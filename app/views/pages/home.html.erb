<div class="home">
    <div class="header centered">
        <div class="top">
            <h1>جد</h1>
            <h3 class="left slogan">Putting the UAE online</h3>
            <h3 class="right">Text 000-000-0000 to start your own page!</h3>
            <div class="clearfix"></div>
        </div>
        <div class="search">
            <input type="text" class="search-box" placeholder="search">
        </div>
        <div class="filters">
            <h3 class="filters-heading left">Filter by category:</h3>
            <% @categories.each do |c| %>
                <div class="filter left" data-category="<%= c %>"><%= c %></div>
            <% end %>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="pages">
        <div class='pages-container centered'>
            <% @pages.each do |p| %>
                <div class="page-preview" data-name="<%= p[:name] %>"
                                          data-phone="<%= p[:phone] %>"
                                          data-slogan="<%= p[:slogan] %>"
                                          data-status="<%= p[:status] %>"
                                          data-location="<%= p[:location] %>"
                                          data-city="<%= p[:city] %>"
                                          data-country="<%= p[:country] %>"
                                          data-category="<%= p[:category] %>">

                    <div class="page-name">
                        <a href='<%=p[:subdomain]%>.<%=@domain%>' class='biz-name'>
                            <%= p[:name] %>
                        </a>
                    </div>
                    <div class="page-phone"><%= p[:phone] %></div>
                </div>
            <% end %>
        </div>
    </div>
</div>
